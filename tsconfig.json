{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["DOM", "ES2019"],
    "target": "ES2019",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    //  0 "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./src/**/*.ts"],

  "exclude": ["./node_modules/*", "dist"]
}
