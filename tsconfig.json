{
  "compilerOptions": {
    "lib": ["dom", "ES2019"],
    "target": "ES2019",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  //  0 "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
  ],

  "exclude": ["./node_modules/*", "dist"]
}
